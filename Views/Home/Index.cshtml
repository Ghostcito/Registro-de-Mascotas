@model IEnumerable<Registro_de_mascotas.Models.Mascota>
@{
    ViewData["Title"] = "Registro de mascotas";
}

<div class="text-center">
    <h1 class="display-4">Bienvenido</h1>
    <br>
    <h2>@ViewData["Title"]</h2>
</div>
<a class="btn btn-success mb-3" asp-controller="Registro" asp-action="Index">REGISTRAR MASCOTA</a>
<br>
<div class="row justify-content-center">
    <table class="table table-striped table-bordered table-haver">
        <thead>
            <td>Nombre</td>
            <td>Raza</td>
            <td>Color</td>
            <td>Fecha de Nacimiento</td>
            <td>Accion</td>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Raza)</td>
                    <td>@Html.DisplayFor(modelItem => item.Color)</td>
                    <td>@Html.DisplayFor(modelItem => item.FechaNacimiento)</td>
                    <td>
                        <a asp-controller="Home" asp-action="Delete" asp-route-id="@item.Id"
                            class="btn btn-success mb-3">Eliminar</a>
                        <a asp-controller="Home" asp-action="Editar" asp-route-id="@item.Id"
                            class="btn btn-success mb-3">Editar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>