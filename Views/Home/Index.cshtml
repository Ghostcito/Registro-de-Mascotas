@model IEnumerable<Registro_de_mascotas.Models.Mascota>
@{
    ViewData["Title"] = "Registro de mascotas";

}

<div class="text-center">
    <h1 class="display-4">Bienvenido</h1>
    <h2>@ViewData["Title"]</h2>
</div>
<div class="row justify-content-center">
    <table class="table table-striped table-bordered table-haver">
        <thead>
            <td>Nombre</td>
            <td>Raza</td>
            <td>Color</td>
            <td>Fecha de Nacimiento</td>
            <td>Accion</td>
        </thead>
        <tbody>
        @foreach(var item in Model){
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Raza)</td>
                <td>@Html.DisplayFor(modelItem => item.Color)</td>
                <td>@Html.DisplayFor(modelItem => item.FechaNacimiento)</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('¿Estás seguro de que deseas eliminar esta mascota?');">
                        <button type="submit">Eliminar</button>
                    </form>
                </td>
            </tr>

        }
        </tbody>
    </table>
</div>